<div class="shop-page-container mb-50">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 mb-sm-35 mb-xs-35">

				<!--=======  shop page banner  =======-->

				<div class="shop-page-banner mb-35">
					<!--<a href="shop-left-sidebar.html">
						<img src="/images/banners/pannertra.PNG" class="img-fluid" alt="">
					</a>-->
				</div>

				<!--=======  End of shop page banner  =======-->

				<!--=======  Shop header  =======-->

				<div class="shop-header mb-35">
					<div class="row">
						<div class="col-lg-4 col-md-4 col-sm-12 d-flex align-items-center">
							<!--=======  view mode  =======-->

							<div class="view-mode-icons mb-xs-10">
								<a class="active" href="#" data-target="grid"><i class="fa fa-th"></i></a>
								<a href="#" data-target="list"><i class="fa fa-list"></i></a>
							</div>

							<!--=======  End of view mode  =======-->

						</div>

						<div
							class="col-lg-8 col-md-8 col-sm-12 d-flex flex-column flex-sm-row justify-content-between align-items-left align-items-sm-center">
							<!--=======  Sort by dropdown  =======-->

							<div class="sort-by-dropdown d-flex align-items-center mb-xs-10">
								<p class="mr-10">Sắp xếp: </p>
								<select name="sort-by" id="sort-by" class="nice-select">
									<option value="0">Theo lượt mua</option>
									<option value="0">Sắp xếp theo kích thước</option>
									<option value="0">A -> Z</option>
									<option value="0">Z -> A</option>
								</select>
							</div>

							<!--=======  End of Sort by dropdown  =======-->

							<p class="result-show-message">Showing 1–12 of 41 results</p>
						</div>
					</div>
				</div>
				<div class="shop-product-wrap grid row no-gutters mb-35">
					<div class="shop-page-container mb-50">
							<div class="container">
								<div class="row">
									<div class="shop-product-wrap grid row no-gutters mb-35">
										<% @sanphams.each do |sanpham| %>
											<div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
												<!--=======  Grid view product  =======-->

												<div class="gf-product shop-grid-view-product">
													<div class="image">
														<a href="sanphams/<%= sanpham.id%>">
															<!--<span class="onsale">Sale!</span>-->
															<img src="/images/thucuong/<%= sanpham.anh%>" class="img-fluid" alt="">
														</a>
														<div class="product-hover-icons">
															<a href="#" data-tooltip="Add to cart"> <span class="icon_cart_alt"></span></a>
															<a href="#" data-tooltip="Add to wishlist"> <span class="icon_heart_alt"></span> </a>
															
														</div>
													</div>
													<div class="product-content">
														<div class="product-categories">
															<a href=""><%= @loaisp.find(sanpham.loaisp_id).tenloai %></a>
														</div>
														<h3 class="product-title"><a href="sanphams/<%= sanpham.id%>"><%= sanpham.tensanpham  %></a></h3>
														<div class="price-box">
															<!--<span class="main-price">$89.00</span>-->
															<span class="discounted-price">42000 đ</span>
														</div>
													</div>

												</div>

											</div>
										<% end %>
									</div>
									
										<!--=======  End of Grid list view  =======-->

										<!--=======  Pagination container  =======-->

									<div class="pagination-container">
										<div class="container">
											<div class="row">
												<div class="col-lg-12">
													<!--=======  pagination-content  =======-->

													<div class="pagination-content text-center">
														<ul>
															<li><a class="active" href="#">1</a></li>
															<li><a href="#">2</a></li>
															<li><a href="#">3</a></li>
															<li><a href="#">4</a></li>
															<li><a href="#"><i class="fa fa-angle-right"></i></a></li>
														</ul>
													</div>

													<!--=======  End of pagination-content  =======-->
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
				</div>
			</div>
		</div>
	</div>
</div>
