<%@sanphams = Sanpham.all%>
<div class="main-header">
    <div class="mobile-toggle" id="mobile-toggle">
        <i class='bx bx-menu-alt-right'></i>
    </div>
    <div class="main-title">
        Thêm khuyến mãi
    </div>
</div>
<div class="main-content">
    <div class="box">
        <div class="box-body overflow-scroll">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-8"><div class="form">
                        <%= form_with(model: khuyenmai) do |form| %>
                            <h3 class="name">Khuyến mãi</h3>
                            <input type="text" class="promation-name" name="tenkhuyenmai" placeholder="Tên khuyến Mãi" value="">
                            <div id="time">
                                <h3 class="name">Thời gian</h3>
                                <% datet = DateTime.now.year.to_s+"-"+DateTime.now.month.to_s+"-"+DateTime.now.day.to_s %>
                                <input type="date" class="startdate" name="start_name" min="<%= datet%>" value="<%= datet%>" ><br>
                                <label for="start_name" class="startlabel">Ngày bắt đầu</label>
                                <input type="date" class="enddate" name="end_name" min="<%= datet%>" value="<%= datet%>" >
                                <label for="end_name" class="endlabel">Ngày kết thúc</label>
                            </div>
                            <h3 class="name">Sản phảm</h3>
                            <div class="select-box">
                                <select class="nice-select" name="sanpham[id]" id="sanpham_id">
                                     <option value="0" hidden="true">Vui lòng chọn sản phẩm</option>
                                    <%@sanphams.each do |sanpham|%>
                                       <option value="<%= sanpham.id %>" >
                                           <%= label_tag sanpham.tensanpham, nil, class: 'loadgiadi' %>                     
                                        </option>
                                       
                                    <% end %>
                                   
                                </select>
                            </div>
                            <h4 class="name">Mức giảm (%)</h4>
                            <input type="number" class="startdate" name="tylegiam" value="1" min="1" max="100"><br/>
                            <button type="submit">Submit</button>
                        <% end%>
                    </div></div>
                    <div class="col-md-4">
                        <div class="box f-height">
                            <div class="box-header">
                               Sản phẩm khuyến mãi
                            </div>
                            <div class="box-body">
                                <ul class="product-list">
                                    <%@sanphams.each do |sanpham|%>


                                    <% end %>
                                   <input type="text" name="sanphamkm" id="sanphamkm">

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div> 
<script type="text/javascript">
   
    $(function savespham(){
        var lick = 0;
        $('.nice-select').trigger('change'); //This event will fire the change event. 
        $('.nice-select').change(function(){  
          var data= $(this).val();
          lick = lick + 1;
          document.getElementById("sanphamkm").value=data;
          document.getElementById("dem").value= lick;

        });   
        
    });

</script>